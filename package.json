{
  "$schema": "http://json.schemastore.org/package",
  "name": "api-diviner-nodejs",
  "version": "0.1.0",
  "description": "Main Diviner Interface",
  "main": "dist/index.js",
  "scripts": {
    "test": "node ./dist/index.js",
    "build": "yarn build-ts && yarn tslint",
    "build-ts": "tsc",
    "dist": "yarn install && tsc -p tsconfig.build.json && yarn tslint",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint-fix": "tslint -c tslint.json -p tsconfig.json --fix",
    "precommit": "echo \"Build must pass before committing\" && yarn build",
    "start": "yarn build && node ./dist/serve.js",
    "killport": "kill $(lsof -t -i :4000)"
  },
  "author": "Arie Trouw",
  "license": "ISC",
  "dependencies": {
    "apollo-server": "^2.0.7",
    "firebase-admin": "^6.0.0",
    "graphql": "^14.0.0",
    "graphql-import": "^0.7.1",
    "graphql-tools": "^4.0.0",
    "ipfs": "^0.32.3",
    "lodash": "^4.17.11",
    "sdk-archivist-nodejs": "https://github.com/XYOracleNetwork/sdk-archivist-nodejs"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.3.2",
    "@playlyfe/gql": "^2.6.0",
    "@types/express": "^4.16.0",
    "@types/express-graphql": "^0.6.1",
    "@types/fs-extra": "^5.0.4",
    "@types/graphql": "^14.0.1",
    "@types/node": "^10.11.0",
    "ethers": "^3.0.27",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "^2.9.2"
  }
}
